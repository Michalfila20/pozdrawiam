

#include <iostream>
using namespace std;

int main()
{
	float a, b;
	int x;
	cout << "Podaj swoje liczby\n";
	cin >> a;
	cin >> b;
	cout << "Jakie dzialanie chcesz wykonac\n";
	cout << "1.Dodawanie\n2.Odejmowanie\n3.Dzielenie\n4.Mnozenie\n";
	cin >> x;
	switch (x)
	{
		case 1: 
			cout << a + b;
		break;
		case 2:
			cout << a - b;
		break;
		case 3:
			if (b > 0)
			{
				cout << a / b;
			}
			else
			{
				cout << "nie dzieli sie przez 0";
			}
		break;
		case 4:
				cout << a * b;
		break;
	}
}
